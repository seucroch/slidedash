<div class="span8">
  <h1>All Slideshows</h1>
</div>
<div class="span8">
    <% @albums.each do |album| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to album.title, album %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(album.created_at) %> ago by  <%=  album.user.name %> 
        <br/>
          
          </small>
        </div>
      </div>
    <% end %>
</div>
<div>
  <% if can? :create, Album %>
    <%= link_to "New Slideshow", new_album_path, class: 'btn btn-primary btn-mini' %>
  <% end %>
</div>